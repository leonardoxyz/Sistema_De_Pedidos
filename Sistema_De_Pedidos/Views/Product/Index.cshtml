@model List<ProductModel>
@{
    ViewData["Title"] = "Listagem de Produtos";
}

<div class="text-center">
    <h1>Produtos Cadastrados</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">GUID</th>
            <th scope="col">Nome do Produto</th>
            <th scope="col">Quantidade do Produto</th>
            <th scope="col">Valor do Produto</th>
            <td scope="col">Ações</td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ProductModel product in Model)
            {
                <tr>
                    <td scope="row">@product.Id</td>
                    <td>@product.productName</td>
                    <td>@product.productQuantity</td>
                    <td>R$@product.productValue</td>
                    <td>
                        <div class="btn-group gap-4" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@product.Id" asp-action="Edit" asp-controller="Product">Editar</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                Excluir
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal -->
@if (Model != null && Model.Any())
        {
            foreach (ProductModel product in Model)
    {
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center align-items-center" id="exampleModalLabel">Confirmação de Exclusão</h5>
                    </div>
                    <div class="modal-body">
                        <p>Você tem certeza que deseja excluir o item @product.productName?</p>
                    </div>
                    <div class="modal-footer">
                        <a role="button" class="btn btn-danger" asp-route-id="@product.Id" asp-action="Delete" asp-controller="Product">Apagar</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>

    }
}
